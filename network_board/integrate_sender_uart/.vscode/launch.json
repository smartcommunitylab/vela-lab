            {
                "name": "Debug cc2650 Node OTA",
                "type": "cortex-debug",
                "request": "launch",
                "servertype": "openocd",
                "executable": "${workspaceRoot}/build/cc26x0-cc13x0/launchpad_vela/cc2650/vela_node.elf", //this is overwritten in overrideLaunchCommands, but cortex-debug extension fails if I don't specify it
                "cwd": "${workspaceRoot}",
                "preLaunchTask": "build_node_cc2650_ota",
                "runToMain": true,
                "interface": "jtag",
                "overrideLaunchCommands": [
                    "monitor reset halt",                                                                       //don't know if this is required
                    "file",                                                                                     //discards the previously loaded elf file
                    "monitor flash write_image erase unlock ${workspaceRoot}/vela_node_with_bootloader.bin",    //loads the correct binary which includes: bootloader, metadata and firmware
                    "monitor fast_load",                                                                        //write it to target
                    "symbol-file ${workspaceRoot}/build/cc26x0-cc13x0/launchpad_vela/cc2650/vela_node.elf",     //loads the symbols for the firmware section
                    "add-symbol-file ${workspaceRoot}/../external_modules/bootloader/bootloader.elf 0x0",       //loads the symbols for the bootloader section
                    "enable breakpoint",                                                                        //standard commands
                    "monitor reset halt",
                    "enable pretty-printer"
                ],
